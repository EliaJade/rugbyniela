<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- ðŸ”¹ El parent SIEMPRE debe ir antes de groupId/artifactId/version -->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.3</version> <!-- versiÃ³n recomendada -->
        <relativePath/> <!-- busca en el repositorio central -->
    </parent>

    <groupId>rugbyniela</groupId>
    <artifactId>rugbyniela</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>rugbyniela</name>
    <description>Proyecto Spring Boot de RugbyNiela</description>

    <properties>
        <!-- Define el nivel de Java que estÃ¡s usando -->
        <java.version>17</java.version>
    </properties>

    <dependencies>
        <!-- Framework web -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <!-- JPA y Hibernate (ya incluye hibernate-core) -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>

        <!-- Base de datos H2 en memoria -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>runtime</scope>
        </dependency>

        <!-- Lombok para reducir boilerplate -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>

        <!-- Logback (ya viene con spring-boot-starter-web, 
             pero puedes dejarlo si quieres configuraciÃ³n adicional) -->
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Plugin de Spring Boot necesario para ejecutar y empaquetar la app -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>

